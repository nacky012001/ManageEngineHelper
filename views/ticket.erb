<form id="do_action_form" action="/do_action" method="post">
  <p>Ticket ids (split by ,): </p>
  <input type="text" id="ticket_ids" name="ticket_ids" value="<%= params[:ticket_ids] %>"/>
  <p>Resolution: </p>
  â€‹<textarea name="resolution" rows="10" cols="70" form="do_action_form"><%= params[:resolution] %></textarea>
